<div class="container">
  <%= link_to('Sign Out', destroy_owner_session_path, :method => :delete) %>
  <div class="row">
    <div class="col-sm-6 col-md-3">.col-sm-3-6</div>
    <div class="col-sm-6 col-md-3">.col-sm-3-6</div>
    <div class="col-sm-6 col-md-3">.col-sm-3-6</div>
    <div class="col-sm-6 col-md-3">.col-sm-3-6</div>
  </div>
  <p id="notice"><%= notice %></p>

  <h1 class="page-title">Restaurants </h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Seats</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.seats %></td>
          <td><%= restaurant.category %></td>
          <td><%= link_to 'Show', restaurant %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>
